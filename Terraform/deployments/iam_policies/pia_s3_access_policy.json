{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3AccessForeksPod",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::int-preproduction-use1-shared-config-bucket",
        "arn:aws:s3:::int-preproduction-use1-shared-config-bucket/*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": ["us-east-1", "us-west-2"]
        }
      }
    }
  ]
}