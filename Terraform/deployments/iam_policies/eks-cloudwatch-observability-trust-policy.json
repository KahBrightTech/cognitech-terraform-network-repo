{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Federated": "arn:aws:iam::[[account_number]]:oidc-provider/oidc.eks.[[region]].amazonaws.com/id/[[oidc_provider_id]]"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "oidc.eks.[[region]].amazonaws.com/id/[[oidc_provider_id]]:sub": "system:serviceaccount:amazon-cloudwatch:cloudwatch-agent",
          "oidc.eks.[[region]].amazonaws.com/id/[[oidc_provider_id]]:aud": "sts.amazonaws.com"
        }
      }
    }
  ]
}
