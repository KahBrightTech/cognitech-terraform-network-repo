{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowAdminRoleAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "[[admin_role]]"
      },
      "Action": [
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:BatchCheckLayerAvailability",
        "ecr:PutImage",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload",
        "ecr:DescribeRepositories",
        "ecr:GetRepositoryPolicy",
        "ecr:ListImages",
        "ecr:DescribeImages"
      ]
    }
  ]
}