{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "Allow s3 access to instance role only",
      "Principal": {
        "AWS": "*"
      },
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:PutObjectAcl",
        "s3:GetObjectAcl",
        "s3:PutObjectVersionAcl",
        "s3:GetObjectVersionAcl"
      ],
      "Resource": [
        "arn:aws:s3:::[[resource_name]]",
        "arn:aws:s3:::[[resource_name]]/*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": ["us-east-1", "us-west-2"],
          "aws:PrincipalArn": ["[[admin_role]]", "[[github_oidc_role]]"]
        }
      }
    },
    {
      "Sid": "Allow ELB service to write access logs",
      "Principal": {
        "AWS": "arn:aws:iam::127311923021:root"
      },
      "Effect": "Allow",
      "Action": "s3:PutObject",
      "Resource": [
        "arn:aws:s3:::[[resource_name]]",
        "arn:aws:s3:::[[resource_name]]/*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": ["us-east-1"]
        },
        "ArnLike": {
          "aws:SourceArn": "arn:aws:elasticloadbalancing:[[region]]:[[account_number]]:loadbalancer/*"
        }
      }
    }
  ]
}
