{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "Allow s3 access to instance role only",
      "Principal": {
        "AWS": "*"
      },
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:PutObjectAcl",
        "s3:GetObjectAcl",
        "s3:PutObjectVersionAcl",
        "s3:GetObjectVersionAcl"
      ],
      "Resource": [
        "arn:aws:s3:::[[resource_name]]",
        "arn:aws:s3:::[[resource_name]]/*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": ["us-east-1", "us-west-2"],
          "aws:PrncipalArn": [
            "[[sso_network_role_arn]]",
            "[[sso_admin_role_arn]]"
          ]
        }
      }
    }
  ]
}
