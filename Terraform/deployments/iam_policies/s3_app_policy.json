{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "Allow s3 access to instance role only",
      "Principal": {
        "AWS": "*"
      },
      "Effect": "Allow",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::[[resource_name]]",
        "arn:aws:s3:::[[resource_name]]/*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": ["us-east-1", "us-west-2"],
          "aws:PrncipalArn": [
            "arn:aws:iam::[[account_number]]:role/aws-reserved/sso.amazonaws.com/AWSReservedSSO_ReadOnlyAccess_9a4a560bae2c526d"
          ]
        }
      }
    }
  ]
}
