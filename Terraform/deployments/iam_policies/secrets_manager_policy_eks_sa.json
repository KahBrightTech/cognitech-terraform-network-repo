{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowGetAndPutSecret",
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:PutSecretValue"
      ],
      "Resource": "arn:aws:secretsmanager:[[region]]:[[account_number]]:secret:int-preproduction-use1-eks-db-service-account*"
    }
  ]
}
