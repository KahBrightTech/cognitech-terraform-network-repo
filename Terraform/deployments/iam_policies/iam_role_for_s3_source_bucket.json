{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SourceBucketPermissions",
      "Effect": "Allow",
      "Action": [
        "s3:GetObjectRetention",
        "s3:GetObjectVersionTagging",
        "s3:GetObjectVersionAcl",
        "s3:ListBucket",
        "s3:GetObjectVersionForReplication",
        "s3:GetObjectLegalHold",
        "s3:GetReplicationConfiguration",
        "s3:PutInventoryConfiguration"
      ],
      "Resource": [
        "arn:aws:s3:::int-preproduction-use1-shared-services-src-replication-bucket/*",
        "arn:aws:s3:::int-preproduction-use1-shared-services-src-replication-bucket"
      ]
    },
    {
      "Sid": "DestinationBucketPermissions",
      "Effect": "Allow",
      "Action": [
        "s3:ReplicateObject",
        "s3:ObjectOwnerOverrideToBucketOwner",
        "s3:GetObjectVersionTagging",
        "s3:ReplicateTags",
        "s3:ReplicateDelete"
      ],
      "Resource": [
        "arn:aws:s3:::mdproduction-use1-shared-services-dest-replication-bucket/*",
        "arn:aws:s3:::mdproduction-use1-shared-services-dest-replication-bucket"
      ]
    },
    {
      "Sid": "ReportBucketPermissions",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:PutObjectTagging",
        "s3:GetObject",
        "s3:GetObjectAcl"
      ],
      "Resource": [
        "arn:aws:s3:::int-preproduction-use1-shared-services-report-bucket/*",
        "arn:aws:s3:::int-preproduction-use1-shared-services-report-bucket"
      ]
    },
    {
      "Sid": "SourceKeyDecryption",
      "Effect": "Allow",
      "Action": ["kms:Decrypt"],
      "Condition": {
        "StringLike": {
          "kms:ViaService": "s3.us-east-1.amazonaws.com",
          "kms:EncryptionContext:aws:s3:arn": [
            "arn:aws:s3:::int-preproduction-use1-shared-services-src-replication-bucket/*"
          ]
        }
      },
      "Resource": [
        "arn:aws:kms:us-east-1:730335294148:key/784d68ea-880c-4755-ae12-beb3037aefc2"
      ]
    },
    {
      "Sid": "DestinationKeyEncryption",
      "Effect": "Allow",
      "Action": ["kms:Encrypt"],
      "Condition": {
        "StringLike": {
          "kms:ViaService": "s3.us-east-1.amazonaws.com",
          "kms:EncryptionContext:aws:s3:arn": [
            "arn:aws:s3:::mdproduction-use1-shared-services-dest-replication-bucket/*"
          ]
        }
      },
      "Resource": [
        "arn:aws:kms:us-east-1:485147667400:key/mrk-587301af90c9440c813284f882515d18"
      ]
    }
  ]
}
